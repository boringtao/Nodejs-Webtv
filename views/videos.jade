extends layout

block content
	section#videos(data-role='page' class="jqm-demos" data-dom-cache="true")
		script.
			$(document).delegate("#appointmentPage", "pageshow", function(inEvent) {
				pageShowHandler("appointment");
			});
		include header
		div(role="main" class="ui-content jqm-content")
			h1 Business
			div
				fieldsetd(data-role="controlgroup" data-type="horizontal" data-mini="true")
					input(name="radio-choice-c" id="event" value="event" checked="checked" type="radio")
					label(for="event") Event
					input(name="radio-choice-c" id="analysis" value="analysis" type="radio")
					label(for="analysis") Analysis
			div(class="ui-grid-a ui-responsive")
				div(class="ui-block-a")
					div(class="jqm-block-content event")
						a(href="/video" data-ajax="false"): img(src="/img/cover/video1.jpg")
						h4 Business world episode 1
				div(class="ui-block-b")
					div(class="jqm-block-content event")
						a(href="/video" data-ajax="false"): img(src="/img/cover/video2.jpg")
						h4 Business world episode 2
				div(class="ui-block-a")
					div(class="jqm-block-content analysis")
						a(href="/video" data-ajax="false"): img(src="/img/cover/video3.jpg")
						h4 Business world episode 3
				div(class="ui-block-b")
					div(class="jqm-block-content analysis")
						a(href="/video" data-ajax="false"): img(src="/img/cover/video4.jpg")
						h4 Business world episode 4
		include nav
		include search
		include footer